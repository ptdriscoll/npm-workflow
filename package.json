{
  "name": "passport",
  "version": "1.0.0",
  "description": "Passport landing page for campaigns and A/B testing",
  "main": "index.js",
  "scripts": {
    "start": "npm-run-all --parallel dev:*",
    "dev:concat-js": "browserify src/assets/js/custom.js > src/assets/js/scripts.js",
    "dev:server": "live-server src --port=8080 --browser=CHROME",
    "build": "npm-run-all prod:*",
    "prod:setup": "mkdirp dist/assets/css dist/assets/img dist/assets/js",
    "prod:setup-custom": "mkdirp dist/assets/img-passport-2018-02",
    "prod:copy-images-custom": "copy src\\assets\\img-passport-2018-02\\* dist\\assets\\img-passport-2018-02\\",
    "prod:copy-images": "copy src\\assets\\img\\* dist\\assets\\img\\",
    "prod:copy-html": "copy src\\index.html dist\\index.html",
    "prod:copy-css": "type src\\assets\\css\\bootstrap.css src\\assets\\css\\ie10-viewport-bug-workaround.css src\\assets\\css\\global.css > dist\\assets\\css\\styles.css",
    "prod:css-uncss": "uncss dist\\index.html > dist\\assets\\css\\used.css",
    "prod:append-css": "type src\\assets\\css\\custom.css >> dist\\assets\\css\\used.css",
    "prod:css-prefix": "postcss dist\\assets\\css\\used.css -u autoprefixer -b \">1% in US, ie>=7\" -o dist\\assets\\css\\styles.css",
    "prod:css-clean": "cleancss -o dist\\assets\\css\\styles.css dist\\assets\\css\\styles.css",
    "prod:uglify-js": "uglifyjs src/assets/js/scripts.js --compress --mangle --output dist/assets/js/scripts.js",
    "prod:server": "live-server dist --port=8088 --browser=CHROME",
    "test": "echo \"No test specified\" && npm run lint && exit 0",
    "lint": "jshint src/assets/js/custom.js || exit 0"
  },
  "author": "KLRN",
  "license": "MIT",
  "devDependencies": {
    "autoprefixer": "^6.5.3",
    "browserify": "^13.1.1",
    "clean-css": "^3.4.21",
    "jshint": "^2.9.4",
    "live-server": "^1.1.0",
    "mkdirp": "^0.5.1",
    "npm-run-all": "^3.1.1",
    "postcss-cli": "^2.6.0",
    "uglify-js": "^3.3.10",
    "uncss": "^0.14.1"
  }
}
